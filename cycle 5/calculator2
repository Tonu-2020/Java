    private void button15ActionPerformed(java.awt.event.ActionEvent evt) {                                         
    num2=Double.parseDouble(textField1.getText());
           double y=0;
           
           if(operator=="+")
           {
                y=num1+num2;
                  textField1.setText(""+y); 
                
           }
       
           
           else if(operator=="-")
           {
                y=num1-num2;
                   textField1.setText(""+y); 
           }
           
          else if(operator=="*")
           {
                y=num1*num2;
                   textField1.setText(""+y); 
           }
           
          else if(operator=="/")
           {
                y=num1/num2;
                   textField1.setText(""+y); 
           }
           else if(operator=="c")
           {
                y=0;
           }
            
       
          operator="="; // TODO add your handling code here:
    }                                        

